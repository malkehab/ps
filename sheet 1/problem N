#include<iostream>
using namespace std;
int main(){
 
    char ch;
    cin>>ch;
 
    if ( ch>='A' && ch<='Z'){
        ch+=32;
    }
    else{
        ch-=32;
    }
 
    cout<<ch<<"\n";
 
    return 0;
}


Another solution 

#include<iostream>
using namespace std;
int main(){
 
    char ch;
    cin>>ch;
 
    if( ch>='A' && ch<='Z'){
        cout<<(char)tolower(ch)<<"\n";
    }
    else{
        cout<<(char)toupper(ch)<<"\n";
    }
 
    return 0;
}
